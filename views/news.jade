doctype 5

html(lang="en")
  include head
  body
    include nav
    div#main.container
      for n in news
            div.col-md-12.col-sm-12.col-xs-12.card
              div.head-news
                img.img-circle.img-responsive(alt="logo ArcheOS Torro" src="img/logoTorro140.png" style="width:35px; float:left")
                p(style='float:right')= n.created_time
                p(style='padding:10px 0 0 45px') Published by ArcheOS
                hr
              div.body-news
              p= n.message
              if n.link
                p See more 
                  a(href= n.link) here 
    include footer